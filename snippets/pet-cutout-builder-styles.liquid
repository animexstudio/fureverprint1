<style>
  /* General Styles */
  .pet-cutout-builder {
    margin: 40px 0;
  }
  
  .hidden {
    display: none !important;
  }
  
  /* Upload Area Styles */
  .pet-cutout-upload-container {
    margin-bottom: 30px;
  }
  
  .upload-area {
    border: 2px dashed #ccc;
    border-radius: 5px;
    padding: 20px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    background: #f9f9f9;
    min-height: 200px;
    position: relative;
  }
  
  .upload-area.dragover {
    border-color: #4a90e2;
    background: #f0f7ff;
  }
  
  .hidden-upload {
    display: none;
  }
  
  .upload-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
  
  .upload-icon {
    font-size: 48px;
    margin-bottom: 10px;
  }
  
  .upload-requirements {
    font-size: 12px;
    color: #666;
    margin-top: 10px;
  }
  
  /* Preview Container */
  .preview-container {
    width: 100%;
  }
  
  .crop-container {
    width: 100%;
    height: 400px;
    background: #f0f0f0;
    overflow: hidden;
  }
  
  .crop-container img {
    max-width: 100%;
    display: block;
  }
  
  .preview-controls {
    display: flex;
    justify-content: center;
    margin-top: 15px;
    gap: 10px;
  }
  
  .preview-btn {
    padding: 8px 15px;
    background: #f0f0f0;
    border: 1px solid #ccc;
    border-radius: 4px;
    cursor: pointer;
  }
  
  .preview-btn:hover {
    background: #e0e0e0;
  }
  
  /* Cutout Type Selector */
  .pet-type-selector {
    margin-top: 20px;
  }
  
  .cutout-options {
    display: flex;
    gap: 20px;
    margin-top: 10px;
  }
  
  .cutout-option {
    display: flex;
    flex-direction: column;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 15px;
    flex: 1;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .cutout-option:hover {
    border-color: #4a90e2;
    background: #f0f7ff;
  }
  
  .option-label {
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  .option-description {
    font-size: 12px;
    color: #666;
  }
  
  /* Size Selector */
  .size-selector {
    margin: 20px 0;
  }
  
  .size-dropdown {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-top: 10px;
  }
  
  .size-dimensions {
    margin-top: 5px;
    font-size: 14px;
    color: #666;
  }
  
  /* Add-ons Section */
  .addons-section {
    margin: 20px 0;
  }
  
  .addon-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 10px;
  }
  
  .addon-option {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
  }
  
  /* Final Proof */
  .final-proof {
    margin: 30px 0;
  }
  
  .proof-container {
    width: 100%;
    min-height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
    background: #f9f9f9;
  }
  
  .proof-image {
    max-width: 100%;
    max-height: 300px;
  }
  
  /* Price and Add to Cart */
  .product-price-container {
    margin: 30px 0;
  }
  
  .product-price {
    margin-bottom: 15px;
  }
  
  .current-price {
    font-size: 24px;
    font-weight: bold;
  }
  
  .add-to-cart-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .generate-proof-btn,
  .add-to-cart-btn {
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.3s ease;
  }
  
  .generate-proof-btn {
    background: #4a90e2;
    color: white;
  }
  
  .generate-proof-btn:hover:not(:disabled) {
    background: #357abd;
  }
  
  .add-to-cart-btn {
    background: #28a745;
    color: white;
  }
  
  .add-to-cart-btn:hover:not(:disabled) {
    background: #218838;
  }
  
  .generate-proof-btn:disabled,
  .add-to-cart-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }
  
  /* Error Container */
  .error-container {
    background: #ffebee;
    border: 1px solid #f44336;
    color: #d32f2f;
    padding: 10px 15px;
    border-radius: 4px;
    margin: 20px 0;
  }
</style>