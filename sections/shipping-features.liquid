{% schema %}
{
  "name": "Shipping & Features",
  "settings": [],
  "presets": [
    {
      "name": "Shipping & Features"
    }
  ]
}
{% endschema %}
{% capture features %}
  Free Shipping & Return|Free shipping for all orders over $100,
  Customer Support 24/7|We are here to help anytime,
  100% Secure Payment|We ensure secure payment for customers
{% endcapture %}

{% assign features_array = features | split: ',' %}
<section class="flex items-center justify-center ">
  <div class=" p-10  md:gap-6 px-5 w-full md:w-auto  grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 lg:gap-18 2xl:gap-[150px]">
    {% for feature in features_array %}
      {% assign feature_parts = feature | split: '|' %}

      <div class="feature-item flex items-center gap-3 space-y-2 space-x-5 flex-col w-full md:flex-row border border-[#EBEBEB] rounded-lg p-4 md:border-0">
        {{- 'feature.svg' | inline_asset_content -}}
        <p class="flex flex-col justify-between items-center md:items-start">
          <strong class="font-medium text-[#2B2B2B]">{{ feature_parts[0] }}</strong>
          <span class="text-[#374144]">{{ feature_parts[1] }}</span>
        </p>
      </div>
    {% endfor %}
  </div>
</section>
