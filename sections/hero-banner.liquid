{% comment %} Shopify Liquid + Tailwind CSS for the 5D Print Technology Section {% endcomment %}
{% style %}
  .hero-section h2 {
    font-family: 'Neco-Variable', sans-serif;
    font-weight: 700;
  }

  .card-container {
    position: relative;
    width: 800px;
    height: 200px;
    margin: 100px auto;
  }

  .card {
    position: absolute;
    top: 50%;
    left: 28%;
    width: 150px;
    height: 220px !important;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    transform: translate(-50%, -50%) translateY(100px) rotate(0deg);
    opacity: 0;
    animation: fanSpread 0.5s ease-out forwards;
    animation-delay: calc(var(--i) * 0.2s);
    z-index: calc(10 - var(--i));
  }

  @keyframes fanSpread {
    to {
      transform: translate(-50%, -50%) translateX(calc((var(--i) - 2) * 120px)) rotate(calc((var(--i) - 2) * 8deg));
      opacity: 1;
    }
  }

  @media (max-width: 767px) {
    .card-container {
      width: 100%;
      height: 100px;
    }

    .card {
      width: 80px;
      height: 120px !important;
      left: 35%;
      /* right: 0%; */
      transform: translate(-50%, -50%) translateY(50px) rotate(0deg);
    }
    @keyframes fanSpread {
      to {
        transform: translate(-50%, -50%) translateX(calc((var(--i) - 2) * 40px)) rotate(calc((var(--i) - 2) * 5deg));
        opacity: 1;
      }
    }
  }
  @media (min-width: 768px) and (max-width: 1024px) {
    .card-container {
      width: 100%;
      height: 100px;
    }

    .card {
      width: 120px;
      height: 150px !important;
      left: 40%;
      /* right: 0%; */
      transform: translate(-50%, -50%) translateY(50px) rotate(0deg);
    }
    @keyframes fanSpread {
      to {
        transform: translate(-50%, -50%) translateX(calc((var(--i) - 2) * 60px)) rotate(calc((var(--i) - 2) * 5deg));
        opacity: 1;
      }
    }
  }
{% endstyle %}
<section class="hero-section bg-[#FEEFF0] py-12 rounded-lg lg:h-[82vh] flex flex-col justify-center items-center">
