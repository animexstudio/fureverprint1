      {{ section.settings.headline }}
    </h2>
    <h2 class="text-6xl font-extrabold text-[#2B2B2B] mt-2">{{ section.settings.subheadline }}</h2>
  </div>

  <div class="card-container">
    <img width="" height="" src="{{ 'img-1.png' | asset_url }}" class="card" style="--i:0;">
    <img width="" height="" src="{{ 'img-2.png' | asset_url }}" class="card" style="--i:1;">
    <img width="" height="" src="{{ 'img-3.png' | asset_url }}" class="card" style="--i:2;">
